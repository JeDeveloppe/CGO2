{% extends 'base.html.twig' %}

{% block title %}Calcul des distances
{% endblock %}

{% block body %}

	<h1 class="col-12 text-center h3 my-5">Calcul des distances</h1>

	<div class="row justify-content-around">
		<div class="col-12 col-lg-5 p-0">
			<div class="card col-12 text-center py-5 border-primary p-0">
				<h3 class="col-12">Lieu d'intervention:</h3>
					{# on affiche le formulaire #}
					{{ form_start(form) }}
						<div class="col-11 mx-auto">
							{{ form_row(form.ville) }}
						</div>
					<hr>

					<div class="row justify-content-center">
						<h3 class="col-12">Par coordonn√©es GPS:</h3>

						<div class="col-6">
							{{ form_row(form.interventionLatitude) }}
						</div>
						<div class="col-6">
							{{ form_row(form.interventionLongitude) }}
						</div>
					</div>
					{{ form_rest(form) }}
				{{ form_end(form) }}

			</div>
		</div>
		<div class="col-12 col-lg-6 my-3 my-lg-0 p-0">
			{# s'il y a une recherche #}
			{% if datas | length > 0 %}
				<div class="card col-12 border-primary p-2">
					<table class="table text-center align-middle">
						<thead>
							<th>Centre</th>
							<th>Distance</th>
							<th>Temps de trajet</th>
						</thead>
						<tbody>
							{% for data in datas %}
								{% set dureeEnSecondes = data.duration %}
								{% set hours = (dureeEnSecondes / 3600) %60 | round %}
								{% set minutes = (dureeEnSecondes / 60) %60 | round %}
								<tr>
									<td class="text-start">
										{{ data.shop.name }}
										<span class="badge badge-success"> {{ data.shop.type.type }} </span>
									</td>
									<td>{{ data.distance / 1000 }}
										KMS</td>
									<td>
										{% if hours > 0 %}
											{{ hours }}
											H
										{% endif %}
										{{ minutes }}
										min
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			{% else %}
				<div class="card col-12 text-center text-black d-flex flex-column justify-content-around border-primary h-100">
					En attente du lieu d'intervention...
				</div>
			{% endif %}
		</div>
	</div>


{% endblock %}
