{{ form_start(form) }}

    <div class="row justify-content-start">
        {% for departement in form.departements %}
            {% set index = departement.vars.value %}{# get array index #}
            {% set entity = form.departements.vars.choices[index].data %}{# get entity object #}
            <div class="col-11 mx-auto col-md-6 col-lg-4 col-xl-3 d-flex m-1">
                <div class="me-2 col-1">{{ form_widget(departement) }}</div>{# render checkbox #}
                <div class="col-11">{{ entity.departementCode }}: {{ entity.departementNomUppercase }}</div>
            </div>
        {% endfor %}
    </div>

    <div class="col-12 text-center my-5">
        <button class="btn btn-lg btn-success">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}
