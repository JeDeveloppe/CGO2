{% extends 'base.html.twig' %}

{% block title %}Departement index{% endblock %}

{% block body %}
    <h1>Departement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DepartementCode</th>
                <th>DepartementNom</th>
                <th>DepartementNomUppercase</th>
                <th>DepartementSlug</th>
                <th>DepartementNomSoundex</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for departement in departements %}
            <tr>
                <td>{{ departement.id }}</td>
                <td>{{ departement.departementCode }}</td>
                <td>{{ departement.departementNom }}</td>
                <td>{{ departement.departementNomUppercase }}</td>
                <td>{{ departement.departementSlug }}</td>
                <td>{{ departement.departementNomSoundex }}</td>
                <td>
                    <a href="{{ path('app_departement_edit', {'id': departement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_departement_new') }}">Create new</a>
{% endblock %}
