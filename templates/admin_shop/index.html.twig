{% extends 'base.html.twig' %}

{% block title %}Liste total des centres en BDD
{% endblock %}

{% block body %}
	<h1 class="col-12 text-center my-5">Liste total des centres en BDD</h1>

	<a class="btn btn-primary mb-5" href="{{ path('app_admin_shop_new') }}">Créer un nouveau centre+</a>

	<table class="table table-striped text-center align-middle">
		<thead>
			<tr>
				<th>Nom</th>
				<th>Statut du centre</th>
				<th>Coordonnées GPS</th>
				<th>Rattaché au CGO de</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for shop in shops %}
				<tr>
					<td>{{ shop.name }}</td>
					<td>{{ shop.isOnLine ? '<span class="text-success text-uppercase">En ligne</span>' : '<span class="text-danger text-uppercase">Hors ligne</span>' }}</td>
					<td>Lat: {{ shop.latitude }} - Lng: {{ shop.longitude }}</td>
					<td>{{ shop.cgo.name }}</td>
					<td>
						<a class="btn btn-warning" href="{{ path('app_admin_shop_edit', {'id': shop.id}) }}">Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
